{
  "name": "opencode-conductor-plugin",
  "version": "1.8.2",
  "description": "Conductor plugin for OpenCode",
  "type": "module",
  "repository": "derekbar90/opencode-conductor",
  "keywords": [
    "opencode",
    "plugin",
    "conductor",
    "agent",
    "sisyphus"
  ],
  "author": "Derek Barrera",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/derekbar90/opencode-conductor/issues"
  },
  "homepage": "https://github.com/derekbar90/opencode-conductor#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "scripts"
  ],
  "scripts": {
    "test": "vitest run",
    "postinstall": "node scripts/postinstall.cjs",
    "build": "tsc && npm run copy-prompts && npm run copy-templates",
    "copy-prompts": "mkdir -p dist/prompts && cp src/prompts/*.toml src/prompts/*.md dist/prompts/ && mkdir -p dist/prompts/agent && cp src/prompts/agent/*.md dist/prompts/agent/ && mkdir -p dist/prompts/commands && cp src/prompts/commands/*.md dist/prompts/commands/ && mkdir -p dist/prompts/strategies && cp src/prompts/strategies/*.md dist/prompts/strategies/",
    "copy-templates": "mkdir -p dist/templates && cp -r src/templates/* dist/templates/",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.209",
    "smol-toml": "^1.6.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@types/node": "^20.0.0",
    "semantic-release": "^24.2.1",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "release": {
    "branches": [
      "main"
    ],
    "repositoryUrl": "https://github.com/derekbar90/opencode-conductor",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
